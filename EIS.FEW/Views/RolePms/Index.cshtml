<style>
    .dxgvTable_EIS {
        border-right: 1px solid #c0c0c0;
    }

    #gvEditing_tcFooterRow {
        color: red !important;
    }

    .btnSearch:hover {
        background-image: url('/Content/Images/Icon-flat/Search-over.png');
        width: 32px;
        height: 32px;
    }

    .btnSearch:active {
        background-image: url('/Content/Images/Icon-flat/Search.png');
        width: 32px;
        height: 32px;
    }

    .dxgvSearchPanel_EIS {
        float: left;
        margin-left: -70px;
        border-bottom: 0px !important;
    }

    .height_10 {
        height: 10px;
        clear: both;
    }
</style>

<script type="text/javascript">

    function back() {
        window.location.href = '@Url.Action("Index", "RolePms")';
    }

    function DeleteRole(roleid) {
        $.ajax({
            url: "@Url.Action("DeleteRole", "RolePms")",
            type: "GET",
            data: { roleId: roleid.toString() },
            success: function (response) {
                var _stNotice = response;
                if (_stNotice == "OK") {
                    alert("Bạn đã xóa thành công!");
                    back();
                }
                else if (_stNotice == "NotOKPms") {
                    alert("Bạn không thể xóa vì có tác vụ tồn tại trong nhóm quyền này!");
                }
                else if (_stNotice == "NotOKUser") {
                    alert("Bạn không thể xóa vì có người dùng sử dụng nhóm quyền này!");
                }
            }
        });
    }
</script>
<div class="height_10"></div>
