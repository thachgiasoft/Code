@Html.DevExpress().FormLayout(settings =>
{
    settings.Name = "formLayout";
    settings.EncodeHtml = false;
    settings.Width = Unit.Percentage(100);
    settings.ColCount = 4;

    settings.Items.Add(txt =>
    {
        txt.Caption = @"Tìm kiếm";
        txt.Name = "str_TimKiem";
        txt.Width = Unit.Percentage(50);
        txt.NestedExtensionType = FormLayoutNestedExtensionItemType.TextBox;
        txt.NestedExtension().TextBox(tb =>
        {
            tb.Properties.NullText = @"Nhập từ khóa tìm kiếm theo tên tài khoản, sự kiện, nội dung...";
            tb.Properties.ClientSideEvents.KeyDown = "OnTextBoxKeyDown";
            tb.Width = Unit.Percentage(100);
        });
    });


    settings.Items.Add(col =>
    {
        col.Name = @"fromDate";
        col.Caption = @"Từ Ngày";
        col.Width = Unit.Percentage(20);
        col.CaptionCellStyle.HorizontalAlign = HorizontalAlign.Center;
        col.NestedExtensionType = FormLayoutNestedExtensionItemType.DateEdit;
        var deProp = col.NestedExtensionSettings as DateEditSettings;
        deProp.Properties.DisplayFormatInEditMode = true;
    });
    settings.Items.Add(col =>
    {
        col.Name = @"toDate";
        col.Caption = @"Đến Ngày";
        col.Width = Unit.Percentage(20);
        col.CaptionCellStyle.HorizontalAlign = HorizontalAlign.Center;
        col.NestedExtensionType = FormLayoutNestedExtensionItemType.DateEdit;
        var deProp = col.NestedExtensionSettings as DateEditSettings;
        deProp.Properties.DisplayFormatInEditMode = true;
    });
    
    settings.Items.Add(bt =>
    {
        bt.NestedExtensionType = FormLayoutNestedExtensionItemType.Button;
        bt.Caption = @" ";
        bt.CaptionSettings.Location = LayoutItemCaptionLocation.Right;
        bt.NestedExtension().Button(s =>
        {
            s.Name = "bt_TimKiem";
            s.EnableTheming = false;
            s.Text = "";
            s.AllowFocus = false;
            s.RenderMode = ButtonRenderMode.Link;
            s.Images.Image.SpriteProperties.CssClass = "btnSearch";
            s.Images.Image.SpriteProperties.HottrackedCssClass = "btnSearchHottracked";
            s.Images.Image.SpriteProperties.PressedCssClass = "btnSearchPressed";
            s.ToolTip = "Tìm kiếm";
            s.ClientSideEvents.Click = "Filter";
        });
    });
}).GetHtml()