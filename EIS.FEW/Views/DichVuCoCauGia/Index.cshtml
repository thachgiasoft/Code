    settings.Width = Unit.Percentage(100);
    settings.Orientation = Orientation.Horizontal;
    settings.ShowCollapseBackwardButton = true;
    settings.ShowCollapseForwardButton = true;

    settings.Panes.Add(pane =>
    {
        pane.Name = "GvNhomDichVu";
        pane.Size = Unit.Percentage(30);
        //pane.SetContent(() => ViewContext.Writer.Write(Html.Action("_GridViewNhomDichVuPartial")));
    });
    settings.Panes.Add(pane =>
