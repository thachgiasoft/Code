@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();

    var grid = Html.DevExpress().GridView(
        settings =>
        {
            settings.Name = "gvEditing";
            settings.KeyFieldName = "MODULEID";
            settings.CallbackRouteValues = new { Controller = "MODULE", Action = "MODULEPartial" };
            settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "MODULE", Action = "AddMODULE" };
            settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "MODULE", Action = "UpdateMODULE" };
            settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "MODULE", Action = "DeleteMODULE" };
            settings.SettingsEditing.Mode = EIS.FEW.Helper.GridViewEditingHelper.EditMode;
            settings.SettingsBehavior.ConfirmDelete = true;
            settings.SettingsPopup.EditForm.Width = 500;
            settings.SettingsPopup.EditForm.HorizontalAlign = PopupHorizontalAlign.Center;
            settings.SettingsPopup.EditForm.AllowResize = true;
            settings.SettingsText.PopupEditFormCaption = "Module";
            settings.SettingsPopup.EditForm.VerticalAlign = PopupVerticalAlign.Below;
            settings.SettingsCommandButton.UpdateButton.Text = "Lưu";
            settings.SettingsCommandButton.UpdateButton.Image.IconID = IconID.SaveSave16x16;
            settings.SettingsCommandButton.CancelButton.Text = "Hủy";
            settings.SettingsCommandButton.CancelButton.Image.IconID = IconID.ActionsCancel16x16;
            settings.Width = Unit.Percentage(80);
            settings.Settings.ShowFilterRow = true;
            settings.Settings.ShowFilterRowMenu = true;

          
            settings.SettingsContextMenu.Enabled = true;
            settings.SettingsPopup.EditForm.Modal = true;
            settings.SettingsPager.Position = PagerPosition.Bottom;
            settings.SettingsPager.PageSizeItemSettings.Visible = true;
            settings.SettingsPager.PageSizeItemSettings.Items = new string[] { "10", "15", "20", "25", "30" };
            settings.SettingsBehavior.AllowFocusedRow = false;
            settings.SettingsBehavior.AllowSelectByRowClick = true;
            settings.SettingsContextMenu.RowMenuItemVisibility.Refresh = false;
            settings.CommandColumn.Visible = true;
            settings.CommandColumn.VisibleIndex = 99;
            settings.CommandColumn.ShowNewButtonInHeader = true;
            settings.CommandColumn.ShowEditButton = true;
            settings.SettingsCommandButton.NewButton.Image.Url = "~/Content/Images/add2.png";
            settings.SettingsCommandButton.NewButton.Text = "Tạo mới";
            settings.SettingsCommandButton.NewButton.Styles.Style.ForeColor = System.Drawing.Color.White;
            settings.SettingsCommandButton.DeleteButton.Image.Url = "~/Content/Images/Delete_16x16.png";
            settings.SettingsCommandButton.EditButton.Image.Url = "~/Content/Images/Edit_16x16.png";
            settings.CommandColumn.Width = Unit.Percentage(5);
            settings.CommandColumn.ShowDeleteButton = true;


            /*Add/Update/Delete*/
            if (ViewData["EditError"] != null)
            {
                settings.SetFooterRowTemplateContent(c =>
                {
                    Html.ViewContext.Writer.Write(ViewData["EditError"]);
                });
            }

            settings.BeforeGetCallbackResult = (s, e) =>
            {
                if (ViewData["EditError"] != null)
                {
                    MVCxGridView gridView = (MVCxGridView)s;
                    gridView.Settings.ShowFooter = true;
                }
            };

            settings.Columns.Add(s =>
            {
                s.Caption = "STT";
                s.ToolTip = "STT";
                s.EditFormSettings.Visible = DefaultBoolean.False;
                s.PropertiesEdit.EnableClientSideAPI = true;
                s.CellStyle.HorizontalAlign = HorizontalAlign.Center;
                s.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
                s.Width = Unit.Percentage(3);
            });
            settings.CustomColumnDisplayText = (send, e) =>
            {
                if (e.Column.Caption == "STT")
                {
                    e.DisplayText = (e.VisibleRowIndex + 1).ToString();
                }
            };
            settings.Columns.Add(col =>
            {
                col.FieldName = "MODULEID";
                col.Caption = "ID";
                col.PropertiesEdit.EnableClientSideAPI = true;
                col.Width = 50;
                col.CellStyle.HorizontalAlign = HorizontalAlign.Center;
                col.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
                col.Visible = false;
            });
            settings.Columns.Add(col =>
            {
                col.FieldName = "DESCRIPTION";
                col.Caption = "Tên";
                col.PropertiesEdit.EnableClientSideAPI = true;
                col.Width = Unit.Percentage(20);
                col.HeaderStyle.HorizontalAlign = HorizontalAlign.Center;
                col.CellStyle.Paddings.PaddingLeft = 50;

                col.Settings.AutoFilterCondition = AutoFilterCondition.Contains;
                col.ColumnType = MVCxGridViewColumnType.TextBox;
                var colP = col.PropertiesEdit as TextBoxProperties;
                colP.MaxLength = 100;
            });

            settings.PreRender = (sender, e) =>
            {
                ((MVCxGridView)sender).StartEdit(-1);

            };

        });
}
@grid.Bind(Model).GetHtml()
